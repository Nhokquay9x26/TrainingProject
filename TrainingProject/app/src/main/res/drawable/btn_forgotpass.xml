<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">   <!-- Trạng thái khi nút click -->
        <shape>
            <gradient android:angle="270" android:endColor="@color/button.forgotPass" android:startColor="@color/button.change_color_on_click" />
            <stroke android:width="1dp" android:color="@color/button.forgotPass" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>            <!-- Trạng thái bình thường khi không click -->
        <shape>
            <solid android:color="@color/button.forgotPass" />
            <!-- Thiết lập màu nền cho nút -->
            <stroke android:width="1dp" android:color="@color/button.forgotPass" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>
