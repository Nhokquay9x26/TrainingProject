<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ic_splashscreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/relativelayout.signup.layout_margintop"
            android:layout_marginLeft="@dimen/relativelayout.signup.layout_marginLeft"
            android:layout_marginStart="@dimen/relativelayout.signup.layout_margintop"
            android:layout_marginEnd="@dimen/relativelayout.signup.layout_marginRight"
            android:layout_marginRight="@dimen/relativelayout.signup.layout_marginRight">

            <RelativeLayout
                android:id="@+id/reAvatar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/relativelayout.signup.layout_height_1"
                android:background="@color/blue">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_avatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/imagerview.signup.layout_margintop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textview.tap_to_change_profile_image"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/textview.signup.layout_marginBottom"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reEdittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/relativelayout.signup.layout_height_2"
                android:layout_below="@+id/reAvatar"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/relativelayout.signup.layout_marginLeft_1"
                    android:layout_marginRight="@dimen/relativelayout.signup.layout_marginLeft_1"
                    android:layout_marginStart="@dimen/relativelayout.signup.layout_marginRight_1"
                    android:layout_marginLeft="@dimen/relativelayout.signup.layout_marginRight_1">
                    <EditText
                        android:id="@+id/edtUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edittext.hint.username"
                        android:layout_marginTop="@dimen/relativelayout.signup.edittext.layout_margintop"
                        android:backgroundTint="@android:color/holo_blue_light"/>

                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_below="@+id/edtUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edittext.hint.email"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/signup.textcolorhint"
                        android:layout_marginTop="@dimen/relativelayout.signup.edittext.layout_margintop"
                        android:backgroundTint="@android:color/holo_blue_light"/>

                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_below="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edittext.hint.password"
                        android:inputType="textPassword"
                        android:textColorHint="@color/signup.textcolorhint"
                        android:layout_marginTop="@dimen/relativelayout.signup.edittext.layout_margintop"
                        android:backgroundTint="@android:color/holo_blue_light"/>

                    <EditText
                        android:id="@+id/edtConfirmPassword"
                        android:layout_below="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edittext.hint.confirm_password"
                        android:textColorHint="@color/signup.textcolorhint"
                        android:layout_marginTop="@dimen/relativelayout.signup.edittext.layout_margintop"
                        android:backgroundTint="@android:color/holo_blue_light"/>

                    <EditText
                        android:id="@+id/edtPromotion"
                        android:layout_below="@+id/edtConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edittext.hint.promotion_code"
                        android:textColorHint="@color/signup.textcolorhint"
                        android:layout_marginTop="@dimen/relativelayout.signup.edittext.layout_margintop"
                        android:backgroundTint="@android:color/holo_blue_light"/>

                    <CheckBox
                        android:id="@+id/checkboxEmail"
                        android:layout_below="@+id/edtPromotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:shadowColor="@color/white"
                        android:layout_marginTop="@dimen/checkbox.signup.checkbox.layout_margintop" />
                    <TextView
                        android:layout_below="@+id/edtPromotion"
                        android:layout_toEndOf="@+id/checkboxEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/textview.signup.layout_marginLeft"
                        android:layout_marginLeft="@dimen/textview.signup.layout_marginLeft"
                        android:layout_marginTop="@dimen/checkbox.signup.checkbox.layout_margintop"
                        android:text="@string/textview.hint.via_email"/>

                    <Button
                        android:id="@+id/btnSignup"
                        android:layout_below="@+id/checkboxEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button.signup.layout_height"
                        android:text="@string/buton.signup"
                        android:textSize="@dimen/button.signup.textsize"
                        android:textColor="@color/white"
                        android:background="@color/blue"
                        android:layout_marginTop="@dimen/checkbox.signup.checkbox.layout_margintop"/>

                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/btnSignin"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button.signup.signin.layout_height"
                android:text="@string/button.signin"
                android:textSize="@dimen/button.signup.signin.textsize"
                android:textColor="@color/blue"
                android:background="@color/white"/>

        </RelativeLayout>

    </RelativeLayout>




</RelativeLayout>
