<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting.item.profile.height"
        android:layout_marginLeft="@dimen/setting.rl.profile.margin.left"
        android:layout_marginRight="@dimen/setting.rl.profile.margin.right"
        android:gravity="center">
<vn.asiantech.LearingEnglish.utils.CircleImageView
    android:id="@+id/imgProfileSetting"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/setting.item.profile.height"
    android:src="@drawable/img_profile_test"
    />
    <TextView
        android:layout_toRightOf="@id/imgProfileSetting"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/setting.item.profile.height"
        android:id="@+id/tvNameProfileSetting"
        android:text="Maniter Jack"
        android:gravity="center_vertical"


        android:paddingLeft="@dimen/setting.rllayout.nameprofile.paddingleft"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_setting"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/imgSettingProfile"
      />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>