<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/footer.bar.height"
    android:background="@color/footer.bar.background"
    android:orientation="horizontal"
    android:weightSum="4">
    /* Tab1 */

    <LinearLayout
        android:id="@+id/llTabTop"
        android:layout_width="@dimen/layout.zero.dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="true"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgTop"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout.zero.dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/footer.bar.margintop"
            android:layout_weight="0.65"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout.zero.dp"
            android:layout_weight="0.35"
            android:gravity="center"
            android:text="@string/footer.bar.text.top"

            />
    </LinearLayout>
    /* Tab2

