<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="vn.asiantech.LearingEnglish.core.fragments.LoginFragment">
    <LinearLayout
        android:layout_width="@dimen/linearlayout.layoutwidth"
        android:layout_height="@dimen/linearlayout.layoutheight"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:weightSum="5">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_background">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/image.margintop"
                android:layout_centerInParent="true"
                android:src="@drawable/ico_avatar"/>
        </RelativeLayout>
        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/edittext.marginleftright"
            android:layout_marginRight="@dimen/edittext.marginleftright"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/blue_background"
            android:ems="22"
            android:fontFamily="tamoha"
            android:textSize="20sp"
            android:hint="@string/edittext.hint.username" />

        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="20"
            android:layout_marginLeft="@dimen/edittext.marginleftright"
            android:layout_marginRight="@dimen/edittext.marginleftright"
            android:textSize="20sp"
            android:fontFamily="tamoha"
            android:hint="@string/edittext.hint.password"
            android:backgroundTint="@color/blue_background"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button.layoutheight.signIn"
            android:layout_marginTop="@dimen/button.margintop.signIn"
            android:layout_marginLeft="@dimen/button.marginleft.signIn"
            android:layout_marginRight="@dimen/button.marginright.signIn"
            android:background="@color/blue_background"
            android:text="@string/button.text.signin"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="24sp"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/textview.marginbottom.forgetpassword"
            android:text="@string/textview.text.forget_password"
            android:textColor="@color/blue_background"
            android:textSize="16sp"
            android:gravity="bottom"/>
    </LinearLayout>
    <Button
        android:layout_width="@dimen/button.layoutwidth.signup"
        android:layout_height="@dimen/button.layoutheight.signup"
        android:gravity="center"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/button.text.signup"
        android:textColor="@color/blue_background"
        android:textSize="@dimen/button.textsize.signup"
        android:textAllCaps="false"/>

</RelativeLayout>
