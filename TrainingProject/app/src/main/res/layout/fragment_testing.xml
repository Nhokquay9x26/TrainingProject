<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlMenubarTesting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size.menubar.test_48"
        android:background="@color/color.menubar.testing">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/color.no.color"
            android:src="@mipmap/ico_testing_title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTimeDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlMenubarTesting"
        android:background="@color/color.detail_time_testing"
        android:paddingTop="@dimen/padding_15"
        android:paddingBottom="@dimen/padding_15"
        >

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin.left"
            android:text="@string/text.testing.number_question"
            android:textSize="@dimen/text.size.number_question" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/text.testing.left_number"
            android:textSize="@dimen/text.size.left_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin.right"
            android:text="@string/text.testing.time_left"
            android:textSize="@dimen/text.size.time_left" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlButtonBottom"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin.testing.button_next_ok_previous"
        android:layout_height="@dimen/size.testing.button_next_ok_previous"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="@dimen/button.testing.width_btn_previous"
            android:layout_height="@dimen/button.testing.btn_previous"
            android:layout_marginLeft="@dimen/margin.left"
            android:layout_alignParentLeft="true"
            android:layout_alignLeft="@+id/btnSubmit"
            android:text="@string/button.testing.previous"
            android:background="@color/color.testing.button_previous"
            />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/color.testing.button_submit"
            android:text="@string/button.testing.submit" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin.right"
            android:layout_alignParentRight="true"
            android:background="@color/color.testing.button_next"
            android:text="@string/button.testing.next" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlButtonBottom"
        android:layout_below="@+id/rlTimeDetail">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvDetailQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/text.testing.detail_question" />

            <RadioButton
                android:id="@+id/rbA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDetailQuestion"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_5"
                android:text="@string/choiceA" />

            <RadioButton
                android:id="@+id/rbB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rbA"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/choiceB" />

            <RadioButton
                android:id="@+id/rbC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rbB"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/choiceC" />

            <RadioButton
                android:id="@+id/rbD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rbC"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/choiceD" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
