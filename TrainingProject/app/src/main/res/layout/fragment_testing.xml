<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_grey_800"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/margin.relative"
        android:layout_marginRight="@dimen/margin.relative"
        android:layout_marginTop="@dimen/margin.relative"
        android:background="@drawable/custom_item_fragment">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="CÃ¢u 1: " />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin.relative"
        android:layout_marginLeft="@dimen/margin.relative"
        android:layout_marginRight="@dimen/margin.relative"
        android:layout_marginTop="@dimen/margin.relative"
        android:background="@drawable/custom_item_fragment">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin.relative">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_back" />

            <TextView
                android:id="@+id/tvPageCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/imgBack"
                android:background="@color/sign_in.header.background"
                android:paddingLeft="10dp"
                android:text="1-" />

            <TextView
                android:id="@+id/tvPageTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tvPageCurrent"
                android:background="@color/sign_in.header.background"
                android:paddingRight="10dp"
                android:text="7" />

            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/tvPageTotal"
                android:src="@drawable/img_next" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>