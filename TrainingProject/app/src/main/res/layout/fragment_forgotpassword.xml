<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerRelativeParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen">

    <RelativeLayout
        android:id="@+id/rlChildOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dim_foreground_disabled_material_light">

        <RelativeLayout
            android:id="@+id/rlChildOfOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rlchildofone_height"
            android:layout_marginEnd="@dimen/rlchildofone_marginend"
            android:layout_marginLeft="@dimen/rlchildofone_marginleft"
            android:layout_marginRight="@dimen/rlchildofone_marginright"
            android:layout_marginStart="@dimen/rlchildofone_marginstart"
            android:layout_marginTop="@dimen/rlchildofone_margintop"
            android:background="@color/background_material_light">

            <RelativeLayout
                android:id="@+id/rlPartOfChildOfOne"
                android:layout_width="match_parent"
                android:layout_height="@dimen/rlpartofchildofone_height"
                android:background="@color/rl.part_of_child_of_one"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ico_avatar_fg"
                    android:contentDescription="@string/app_name" />

            </RelativeLayout>

            <EditText
                android:id="@+id/edtTypingEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlPartOfChildOfOne"
                android:layout_margin="@dimen/edttypingemail_margin"
                android:backgroundTint="@color/edittext.backgroundtint"
                android:hint="@string/edittext.hint.write_your_email_here"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textSize="@dimen/edttypingemail_textsize"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btnForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtTypingEmail"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_forgotpass"
                android:text="@string/button.click.forgot_password"
                android:textAllCaps="false"
                android:textColor="@color/background_material_light"
                android:textSize="@dimen/btnforgot_textsize" />

            <TextView
                android:id="@+id/tvLinkToRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/btnForgot"
                android:layout_marginTop="@dimen/tvlinktoregister_margintop"
                android:gravity="center"
                android:text="@string/textview.text.new_to_member"
                android:textColor="@color/tv.of_child_one"
                android:textSize="@dimen/tvlinktoregister_textsize" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
