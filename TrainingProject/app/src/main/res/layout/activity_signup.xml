<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity.title.height"
        android:background="@color/signup.ln.backgroud"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile"
            android:contentDescription="@string/signup.conten.Descrip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/signup.sub.margin"
            android:text="@string/signup.tv.sub"
            android:textColor="@color/signup.tv.sub.color" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/llProfile"
        android:layout_marginBottom="@dimen/activity.layout.margin"
        android:layout_marginLeft="@dimen/activity.layout.margin"
        android:layout_marginRight="@dimen/activity.layout.margin"
        android:layout_marginTop="@dimen/activity.layout.margin">

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activity.signup.hint.user" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtUsername"
            android:hint="@string/activity.signup.hint.email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtEmail"
            android:hint="@string/activity.signup.hint.password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edtConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtPassword"
            android:hint="@string/activity.singup.hint.confirmpass"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/edtPromotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtConfirmPass"
            android:hint="@string/activity.signup.hint.promotion" />

        <CheckBox
            android:id="@+id/chkCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtPromotion" />

        <TextView
            android:id="@+id/tvSub"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/signup.tv.heignt"
            android:layout_below="@+id/edtPromotion"
            android:layout_toEndOf="@+id/chkCheck"
            android:layout_toRightOf="@+id/chkCheck"
            android:gravity="center_vertical"
            android:text="@string/signup.tv.check" />

        <TextView
            android:id="@+id/tvButtonSignUp"
            android:layout_width="@dimen/activity.signup.width"
            android:layout_height="@dimen/activity.signup.height"
            android:layout_below="@+id/tvSub"
            android:layout_centerHorizontal="true"
            android:background="@color/dialog.backgroud.title"
            android:gravity="center"
            android:text="@string/signup.tv.text"
            android:textColor="@color/signup.text.color.buton"
            android:textSize="@dimen/signup.tv.size"
            android:layout_marginTop="@dimen/signup.butonsigup.margintop"/>
    </RelativeLayout>
</RelativeLayout>