<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/relativelayout.item_top_height">
    <vn.asiantech.LearingEnglish.views.CircleImageView
        android:id="@+id/imgCategory"
        android:layout_width="@dimen/imageview.category_width"
        android:layout_height="@dimen/imageview.category_height"
        android:src="@drawable/img_avatar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/imageview.category_margin_left"
        android:layout_marginStart="@dimen/imageview.category_margin_left"/>
    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textView.top_category_name"
        android:layout_toRightOf="@+id/imgCategory"
        android:layout_toEndOf="@+id/imgCategory"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/textview.category_margin_left"
        android:layout_marginStart="@dimen/textview.category_margin_left"
        android:textSize="16sp"
        android:textColor="@color/textView.category"/>
    <ImageView
        android:id="@+id/imgDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_detail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/imageview.detail_margin_right"
        android:contentDescription="@null"
        android:layout_marginEnd="@dimen/imageview.detail_margin_right"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view.below_editText"
        android:background="@color/View.below_text_category"
        android:layout_toRightOf="@+id/imgCategory"
        android:layout_toEndOf="@+id/imgCategory"
        android:layout_toLeftOf="@id/imgDetail"
        android:layout_toStartOf="@id/imgDetail"
        android:layout_below="@+id/tvCategory"/>
</RelativeLayout>