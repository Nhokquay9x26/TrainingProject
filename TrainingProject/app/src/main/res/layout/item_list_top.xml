<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/relativelayout.itemtop.height_95dp"
    android:background="@color/white">

    <vn.asiantech.LearingEnglish.Views.CircleImageView
        android:id="@+id/imgItemTopImage"
        android:layout_width="@dimen/img.itemtop.width_65dp"
        android:layout_height="@dimen/img.itemtop.height_65dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/img.itemtop.margin_left_11dp"
        android:layout_marginStart="@dimen/img.itemtop.margin_left_11dp" />

    <TextView
        android:id="@+id/txtItemTopUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/textview.itemtop.margin_left_14dp"
        android:layout_marginStart="@dimen/textview.itemtop.margin_left_14dp"
        android:layout_toEndOf="@+id/imgItemTopImage"
        android:layout_toLeftOf="@+id/imgTopNext"
        android:layout_toRightOf="@+id/imgItemTopImage"
        android:layout_toStartOf="@+id/imgTopNext"
        android:textColor="@color/black"
        android:textSize="@dimen/textview.itemtop.textsize_30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview.itemtop.height_5dp"
        android:layout_below="@+id/txtItemTopUsername"
        android:layout_toEndOf="@+id/imgItemTopImage"
        android:layout_toLeftOf="@+id/imgTopNext"
        android:layout_toRightOf="@+id/imgItemTopImage"
        android:layout_toStartOf="@+id/imgTopNext">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview.itemtop.height_1dp"
            android:layout_centerVertical="true"
            android:background="@color/top.mau_nen" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/img.itemtop.margin_right_5dp"
            android:layout_marginRight="@dimen/img.itemtop.margin_right_5dp"
            android:background="@drawable/bg_item_top"
            android:contentDescription="@null" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgTopNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/img.itemtop.margin_right_11dp"
        android:layout_marginRight="@dimen/img.itemtop.margin_right_11dp"
        android:layout_marginTop="@dimen/img.itemtop.margin_top_32dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_next_top" />

</RelativeLayout>
