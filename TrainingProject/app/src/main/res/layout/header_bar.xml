<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/header.bar.height"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="@color/header.bar.background"
    >
<ImageView
    android:layout_width="@dimen/layout.zero.dp"
    android:layout_weight="0.2"
    android:layout_height="wrap_content"
    android:id="@+id/imgHeaderBarBack"
    />
 <TextView
     android:layout_width="@dimen/layout.zero.dp"
     android:layout_weight="0.6"
     android:layout_height="wrap_content"
     android:text="@string/footer.bar.text.top"
     android:textColor="#FFFFFF"
     android:textSize="@dimen/header.bar.text.title.size"
     android:id="@+id/tvTitleHeaderBar"
     android:layout_gravity="center"
     android:gravity="center"
     />

    <LinearLayout
        android:layout_width="@dimen/layout.zero.dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgHeaderBarSearch"
            android:layout_gravity="center"
            android:background="@drawable/btn_search_xhd"
            />

    </LinearLayout>

</LinearLayout>
