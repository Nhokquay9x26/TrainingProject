<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tvWordFavorite"
        style="@style/favorite_textview_size"
        android:text="@string/textview.text.favorite"/>
    <TextView
        android:id="@+id/tvTemp"
        style="@style/favorite_textview_size"
        android:text="@string/textview.text.two"
        android:layout_toRightOf="@+id/tvWordFavorite"/>
    <TextView
        android:id="@+id/tvSpellWord"
        android:layout_toRightOf="@id/tvTemp"
        style="@style/favorite_textview_size"
        android:text="@string/textview.text.spell" />
    <ImageView
        android:id="@+id/imgSound"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_sound"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"/>

</RelativeLayout>