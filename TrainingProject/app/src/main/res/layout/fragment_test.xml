<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/frameTest"
    android:layout_height="match_parent"
    android:background="@color/top.mau_nen"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlTest"
        android:layout_width="match_parent"
        android:layout_height="@dimen/relativelayout.test.height_48dp"
        android:background="@color/blue.top">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_result"
            android:layout_centerVertical="true"
            android:text="Submit"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/img.test.margin_left_20dp"
            android:layout_marginLeft="@dimen/img.test.margin_left_20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview.test.text"
            android:textColor="@color/white"
            android:textSize="@dimen/textview.test.textsize_28sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imgtest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_marginEnd="@dimen/img.test.margin_right_28dp"
            android:layout_marginRight="@dimen/img.test.margin_right_28dp"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerTest"
        android:layout_below="@+id/rlTest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_list_favorite"
        android:layout_marginEnd="@dimen/relativelayout.test.margin_right_14dp"
        android:layout_marginStart="@dimen/relativelayout.test.margin_left_14dp"
        android:layout_marginRight="@dimen/relativelayout.test.margin_right_14dp"
        android:layout_marginLeft="@dimen/relativelayout.test.margin_left_14dp"
        android:layout_marginTop="@dimen/relativelayout.test.margin_top_22dp"
        android:layout_marginBottom="@dimen/relativelayout.test.margin_bottom_6dp"/>


</LinearLayout>