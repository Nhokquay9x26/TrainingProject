<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <!--Dialog-->
    <style name="MyTheme.Dialog" parent="MyTheme">
        <item name="android:windowBackground">@android:color/darker_gray</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustPan|adjustResize</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="MyTheme.NoActionbar" parent="MyTheme">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--Fullscreen-->
    <style name="MyTheme.Fullscreen" parent="MyTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
